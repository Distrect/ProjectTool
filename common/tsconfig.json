{
  "extends": "../tsconfig.base.json",
  "exclude": ["./dist/*"],
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",

    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "skipLibCheck": false,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@common/*": ["./*"]
    }
  }
}
