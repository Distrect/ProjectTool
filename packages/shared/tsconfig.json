{
  "extends": "../../tsconfig.options.json",
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "../../dist/shared",
    "module": "commonjs",
    "declaration": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": { "@shared/*": ["./src/*"] }
  },
  "exclude": ["node_modules", "./dist/**"]
}
